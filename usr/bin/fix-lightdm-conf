#
##################################################################################################################
#tput setaf 0 = black
#tput setaf 1 = red
#tput setaf 2 = green
#tput setaf 3 = yellow
#tput setaf 4 = dark blue
#tput setaf 5 = purple
#tput setaf 6 = cyan
#tput setaf 7 = gray
#tput setaf 8 = light blue
##################################################################################################################

echo "###############################################################################"
echo "Making backups and copying files : "
echo "This script names them /etc/backup-lightdm.conf and /etc/backup-lightdm-gtk-greeter.conf"
echo "and if present /etc/backup-slick-greeter.conf"
echo "###############################################################################"
echo "If file exists, make a backup"
[ -f /etc/lightdm/lightdm.conf ] && sudo cp -p /etc/lightdm/lightdm.conf /etc/backup-lightdm.conf
[ -f /etc/lightdm/lightdm-gtk-greeter.conf ] && sudo cp -p /etc/lightdm/lightdm-gtk-greeter.conf /etc/backup-lightdm-gtk-greeter.conf
[ -f /etc/lightdm/slick-greeter.conf ] && sudo cp -p /etc/lightdm/slick-greeter.conf /etc/backup-slick-greeter.conf

echo
echo "Overwriting lightdm configuration files"
echo
[ -f /etc/lightdm/lightdm.conf ] && sudo cp -v /usr/share/archlinux-tweak-tool/data/arco/lightdm/lightdm.conf /etc/lightdm/lightdm.conf
[ -f /etc/lightdm/lightdm-gtk-greeter.conf ] && sudo cp -v /usr/share/archlinux-tweak-tool/data/arco/lightdm/lightdm-gtk-greeter.conf /etc/lightdm/lightdm-gtk-greeter.conf
[ -f /etc/lightdm/slick-greeter.conf ] && sudo cp -v /usr/share/archlinux-tweak-tool/data/arco/lightdm/slick-greeter.conf /etc/lightdm/slick-greeter.conf

echo "###############################################################################"
echo "###                DONE - YOU CAN CLOSE THIS WINDOW                        ####"
echo "###############################################################################"


